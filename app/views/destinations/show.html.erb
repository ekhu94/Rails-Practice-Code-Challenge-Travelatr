<h1><%= @destination.name %></h1>
<h2>Country: <%= @destination.country %></h2>
<h3>Most Recent Posts</h3>
<ol>
    <% @destination.five_most_recent_posts.each do |p| %>
        <li><%= link_to p.title, post_path(p) %></li>
    <% end %>
</ol>
<h3><%= link_to @destination.featured_post.title, post_path(@destination.featured_post) %></h3>
<button><%= link_to "Back", destinations_path %></button>